{	
	"manifest_version": 2,

	"name": "WIDE TEXT",
	"description": "Context menu to make your text﻿ ﻿ｗｉｄｅ.",
	"version": "1.0",
	"permissions": ["contextMenus", "webNavigation", "http://*/*", "https://*/*", "clipboardRead", "clipboardWrite"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"content.js"
			],
			"all_frames": true
		}
	],
	"icons": {
		"16":"16_icon.png",
		"64":"64_icon.png",
		"128":"128_icon.png"
	}
}